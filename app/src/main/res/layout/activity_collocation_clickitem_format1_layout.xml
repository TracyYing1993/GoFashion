<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/big_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="75dp"
        >

        <ImageView
            android:id="@+id/designer_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/designer_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/designer_img"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="hahaha"
            />

        <ImageView
            android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/designer_nick_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/designer_img"
            android:src="@mipmap/dizhi"
            />

        <TextView
            android:id="@+id/weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/designer_nick_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dizhi"
            android:text="未知"

            />

        <TextView
            android:id="@+id/fensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/designer_nick_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/weizhi"
            android:text="粉丝 :"
            android:textSize="15sp"
            />


        <TextView
            android:id="@+id/concernedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/designer_nick_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/fensi"
            android:text="000"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#808080"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/designer_img"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#808080"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户没有添加描述"
                android:textSize="15sp"

                />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#D2D2D2"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="搭配单品"
               android:textSize="15sp"
               />

           <RelativeLayout
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:padding="5dp"
               >
               <ImageView
                   android:id="@+id/product_img"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                   />
            <TextView
                android:background="#99808080"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"/>

               <TextView

                   android:paddingTop="5dp"
                   android:id="@+id/spec_price_list"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="000"
                   android:textColor="#fff"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"
                   />

           </RelativeLayout>

           <TextView
               android:id="@+id/cate_value"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="tytytytytyt"
               android:paddingLeft="10dp"
               />

       </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#D2D2D2"/>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有品牌"
            android:textSize="15sp"
            />

        <TextView

            android:id="@+id/product_list_brand_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#808080"
            android:padding="5dp"
            android:text="hahahahha"
            android:textColor="#fff"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#808080"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关标签"
            android:textSize="15sp"
            />


        <TextView

            android:id="@+id/tab_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#808080"
            android:padding="5dp"
            android:text="yuyuyuyu"
            android:textColor="#fff"
            android:textSize="12sp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#D2D2D2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模特资料"
            android:textSize="15sp"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aa"
            android:layout_marginTop="10dp"
            android:background="#808080"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="身高：保密"
                android:layout_marginRight="2dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="体型：保密"
                android:layout_marginRight="2dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center"
                android:text="年龄：保密"
                />

        </LinearLayout>

    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#D2D2D2"/>

      <TextView
          android:id="@+id/like_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="喜欢（000）"
          />

        <LinearLayout
            android:id="@+id/user_icon_array"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
           />








    </LinearLayout>


</ScrollView>
