<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/title_container_size"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@drawable/common_navi_mixblack">

        <Button
            android:id="@+id/btn_back_size"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="clickButton"
            android:background="@drawable/common_navi_back" />

        <TextView
            android:id="@+id/text_title_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="尺寸列表"
            android:gravity="center"
            android:textColor="#fff"/>
    </LinearLayout>
    <TextView
        android:id="@+id/empty_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TableLayout
        android:id="@+id/tableLayout_size"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:stretchColumns="3" />


</LinearLayout>