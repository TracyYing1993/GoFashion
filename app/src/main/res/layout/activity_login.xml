<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_navi_mixblack">

    <TextView
        android:id="@+id/login_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/common_navi_back"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="帐号登录"
         android:textColor="#fff"
         android:textSize="18sp"
         android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_icon_user" />
        <EditText
            android:id="@+id/edit_login_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:inputType="phone"
            android:textColorHint="#B6B6B6"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#d7d7d7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_icon_pwd" />
        <EditText
            android:id="@+id/edit_login_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:inputType="textPassword"
            android:textColorHint="#B6B6B6"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#d7d7d7"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/text_login_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速注册"
            android:textSize="18sp"
            android:textColor="#B6B6B6"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/text_login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="18sp"
            android:textColor="#B6B6B6"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="85dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#d7d7d7"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更多登录方式"
            android:textColor="#313131"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#d7d7d7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:src="@drawable/present_weixin"
            android:layout_marginRight="80dp"
            />
        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="35dp"
            android:layout_height="55dp"
            android:src="@drawable/qq_login_btn"
            />
    </LinearLayout>


</LinearLayout>