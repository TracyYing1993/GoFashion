<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/common_navi_mixblack"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/fl_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"/>
        <TextView
            android:id="@+id/fl_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:gravity="center"
            android:text="搜索用户、品牌、话题、标签"
            />
        <ImageView
            android:id="@+id/fl_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_gouwudai"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/fl_title"
        android:orientation="horizontal"
        android:background="#fff">
    <android.support.design.widget.TabLayout
        android:id="@+id/fl_tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:tabIndicatorColor="#FEDC32"
        />
        <ImageButton
            android:id="@+id/fl_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_bottom"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fl_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

</LinearLayout>