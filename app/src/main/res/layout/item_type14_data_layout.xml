<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:elevation="6dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type14_imageview1"
                android:layout_width="0dp"
                android:layout_height="340dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="340dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/type14_imageview2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/type14_imageview3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/type14_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:background="@drawable/remen_circle_image"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/type14_small_imageview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="75dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/type14_nicked_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type14_head"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:textColor="#000"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/type14_collacation_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/type14_conner_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
